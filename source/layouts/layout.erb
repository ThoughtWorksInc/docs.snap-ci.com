<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><%= current_page.data.title %> | Snap CI Documentation, FAQ, and Troubleshooting</title>
    <meta name="title" content="<%= current_page.data.title %> | Snap CI Documentation, FAQ, and Troubleshooting">
    <meta name="description" content="Sign in, add your repositories, configure your build. Getting started with Snap is straightforward for most applications.">
    <meta name="keywords" content="continuous integration, continuous delivery, hosted continuous integration, cloud continuous integration">
    <meta name="viewport" content="width=device-width">
    <%= tag(:meta, :development => current_page.app.development?) %>

    <%= favicon_tag 'favicons/snap.ico', :rel => 'shortcut icon' %>
    <%= favicon_tag 'favicons/snap.png', :rel => 'apple-touch-icon-precomposed' %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "TechArticle",
      "headline": <%= current_page.data.title.to_json %>,
      "author": "Snap CI",
      "publisher": "Snap CI",
      "description": <%= current_page.data.doc_title.to_json %>,
      "articleBody": <%= yield.to_json %>
    }
    </script>

  </head>

  <body class="<%= page_classes %>">
    <div class="container">
      <div class="site">
      <%= partial "partials/header" %>
        <div class="content">
          <div class="sidebar-container">
            <div class="topic-container">
              <%= partial "partials/sidebar" %>

              <div class="topic">
                <h1 class="doc-title">
                  <a href="<%= current_page.url %>"><%= current_page.data.doc_title || current_page.data.title %></a>
                  <% if current_page.data.draft %>
                    <span class='draft'>(This is currently a draft!)</span>
                  <% end %>

                  <% if current_page.data.wip %>
                    <span class='draft'>(WIP - This functionality is currently in preview)</span>
                  <% end %>
                </h1>
                <div class="doc-content">
                  <%= yield %>
                </div>
              </div>

            </div>
          </div>
        </div>

        <%= partial "partials/footer" %>
      </div>
    </div> <!-- /container -->
  </body>
</html>
